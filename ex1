<?php
if(!isset($_COOKIE['fond']) AND !isset($_COOKIE['texte']) )
{
$fond=$_POST['fond'];
$texte=$_POST['texte'];
$expir=time() + 2*30*24*3600;
setcookie("fond",$fond,$expir);
setcookie("texte",$texte,$expir);
}
else
{
$fond=$_COOKIE['fond'];
$texte=$_COOKIE['texte'];
}
?>
